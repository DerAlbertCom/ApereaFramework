@model PasswordResetRequestViewModel
@{
    ViewBag.Title = ResourceStrings.PageTitle_PasswordResetRequest;
}
<h2>@ResourceStrings.PageTitle_PasswordResetRequest</h2>

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<p>@ResourceStrings.Text_PasswordResetRequest_TypeYourEMail</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="editform">
    @Html.EditorForModel()
    </div>
    <p>
        <input type="submit" value="@ResourceStrings.Button_PasswordResetRequest" />
    </p>
}
